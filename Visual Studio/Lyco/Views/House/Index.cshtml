@{
}
<html>
<body>
    <div class="container">
        <form class="form-signin" action="/House/Validar" method="post">

            <h2 class="form-signin-heading">Sign in</h2>

            <label for="inputEmail" class="sr-only">Correo</label>
            <input type="text" asp-for="CorreoUsuario" class="form-control" placeholder="Correo" id="Correo" />
            <span asp-validation-for="CorreoUsuario" class="text-danger"></span>


            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" asp-for="PasswordUsuario" class="form-control" placeholder="Password" id="password" />
            <span asp-validation-for="PasswordUsuario" class="text-danger"></span>


            <button class="btn btn-lg btn-primary btn-block" type="submit">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in
            </button>
            <a asp-action="Register">Registrate</a>
        </form>
    </div>
</body>
</html>