@{
}

<html>
<body>
    <form asp-controller="House" asp-action="RegisterUsuario" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput2">DNI</label>
            <input asp-for="IdUsuario" class="form-control" id="formGroupExampleInput2" placeholder="DNI">
            <span asp-validation-for="IdUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Nombres</label>
            <input asp-for="NombreUsuario" class="form-control" id="formGroupExampleInput2" placeholder="Nombre usuario">
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Apellidos</label>
            <input asp-for="ApellidoUsuario" class="form-control" id="formGroupExampleInput2" placeholder="Apellidos usuario">
            <span asp-validation-for="ApellidoUsuario" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Edad</label>
            <input asp-for="EdadUsuario" class="form-control" id="formGroupExampleInput2" placeholder="Edad">
            <span asp-validation-for="EdadUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Nickname</label>
            <input asp-for="NombreusuarioUsuario" class="form-control" id="formGroupExampleInput2" placeholder="Nickname">
            <span asp-validation-for="NombreusuarioUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Correo</label>
            <input asp-for="CorreoUsuario" class="form-control" id="formGroupExampleInput2" placeholder="Correo usuario">
            <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Password</label>
            <input type = "Password" asp-for="PasswordUsuario" class="form-control" id="Password" placeholder="Password usuario">
            <span asp-validation-for="PasswordUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Tipo Usuario</label>
            <select asp-for="TipoUsuario" class="form-control" id="formGroupExampleInput2" asp-items='@(new SelectList( ViewBag.Tipo,"TipoUsuario1","Desc"))'></select>
            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Grabar</button>
        </div>

    </form>

</body>
</html>
